pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'docker build -t etl-pipeline .'
            }
        }
        stage('Test') {
            steps {
                sh 'pytest tests/'
            }
        }
        stage('Deploy') {
            steps {
                sh 'docker run etl-pipeline'
            }
        }
    }
}